<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess 
	xmlns:as="http://www.geotools.org/app-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace>
			<prefix>ptv</prefix>
			<uri>${ptv.namespace}</uri>
		</Namespace>
	</namespaces>
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				${ptv.datastore.namespace}
				${ptv.datastore.dbtype}
				${ptv.datastore.schema}
				${ptv.datastore.database}
				${ptv.datastore.host}
				${ptv.datastore.port}
				${ptv.datastore.user}
				${ptv.datastore.password}
				${ptv.datastore.exposePrimaryKeys}
				${ptv.datastore.validateConnections}
				${ptv.datastore.supportOnTheFlyGeometrySimplification}
				${ptv.datastore.connectionTimeout}
			</parameters>
		</DataStore>
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
			<schemaUri>${ptv.baseSchemaUri}/serviceLocationLan.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>mv_dataStore_holidayServiceHoursLan</sourceType>
			<targetElement>ptv:holidayOpeningHoursLan</targetElement>
			<attributeMappings>
			
				<!-- id -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayOpeningHoursLan</targetAttribute>
					<idExpression><OCQL>ServiceHoursId</OCQL></idExpression>
				</AttributeMapping>

				<!-- holiday name FI -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayName_FI</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayName_FI</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- holiday name SV -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayName_SV</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayName_SV</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- holiday name EN -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayName_EN</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayName_EN</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- holiday date -->
				<AttributeMapping>
					<targetAttribute>ptv:date</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayDate</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- opening type -->
				<AttributeMapping>
					<targetAttribute>ptv:openingType</targetAttribute>
					<sourceExpression>
						<OCQL>OpeningType</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- opening hours -->
				<AttributeMapping>
					<targetAttribute>ptv:openingHours</targetAttribute>
					<sourceExpression>
						<OCQL>OpeningHours</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- FEATURE_LINK mapping -->
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute>
					<sourceExpression>
						<OCQL>RootId</OCQL>
					</sourceExpression>
				</AttributeMapping>
				
			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
