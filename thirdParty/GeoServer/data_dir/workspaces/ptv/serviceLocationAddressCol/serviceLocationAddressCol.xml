<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess 
	xmlns:as="http://www.geotools.org/app-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace>
			<prefix>ptv</prefix>
			<uri>${ptv.namespace}</uri>
		</Namespace>
	</namespaces>
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				${ptv.datastore.namespace}
				${ptv.datastore.dbtype}
				${ptv.datastore.schema}
				${ptv.datastore.database}
				${ptv.datastore.host}
				${ptv.datastore.port}
				${ptv.datastore.user}
				${ptv.datastore.password}
				${ptv.datastore.exposePrimaryKeys}
				${ptv.datastore.validateConnections}
				${ptv.datastore.supportOnTheFlyGeometrySimplification}
				${ptv.datastore.connectionTimeout}
			</parameters>
		</DataStore>
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
			<schemaUri>${ptv.baseSchemaUri}/serviceLocation.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>mv_dataStore_serviceLocationAddress</sourceType>
			<targetElement>ptv:serviceLocationAddressCol</targetElement>
			<attributeMappings>
			
				<!-- id -->
				<AttributeMapping>
					<targetAttribute>ptv:serviceLocationAddressCol</targetAttribute>
					<idExpression><OCQL>RootId</OCQL></idExpression>
				</AttributeMapping>

				<!-- address collection -->
				<AttributeMapping>
					<targetAttribute>ptv:address</targetAttribute>
					<sourceExpression>					  
						<OCQL>AddressId</OCQL>						  
						<linkElement>ptv:serviceLocationAddress</linkElement>						  
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>true</isMultiple>
				</AttributeMapping>

				<!-- link -->
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute>
					<sourceExpression>
						<OCQL>RootId</OCQL>
					</sourceExpression>
				</AttributeMapping>

			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
