<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess 
	xmlns:as="http://www.geotools.org/app-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace>
			<prefix>ptv</prefix>
			<uri>${ptv.namespace}</uri>
		</Namespace>
	</namespaces>
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				${ptv.datastore.namespace}
				${ptv.datastore.dbtype}
				${ptv.datastore.schema}
				${ptv.datastore.database}
				${ptv.datastore.host}
				${ptv.datastore.port}
				${ptv.datastore.user}
				${ptv.datastore.password}
				${ptv.datastore.exposePrimaryKeys}
				${ptv.datastore.validateConnections}
				${ptv.datastore.supportOnTheFlyGeometrySimplification}
				${ptv.datastore.connectionTimeout}
			</parameters>
		</DataStore>
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
			<schemaUri>${ptv.baseSchemaUri}/serviceLocation.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>mv_dataStore_holidayServiceHours</sourceType>
			<targetElement>ptv:serviceLocationHolidayOpeningHours</targetElement>
			<isDenormalised>true</isDenormalised>
			<attributeMappings>
				
				<!-- service hours id --> 
				<AttributeMapping>
					<targetAttribute>ptv:serviceLocationHolidayOpeningHours</targetAttribute>
					<idExpression>
						<OCQL>ServiceHoursId</OCQL>
					</idExpression>
				</AttributeMapping>

				<!-- holiday names -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayNames</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayId</OCQL>
						<linkElement>ptv:serviceLocationServiceHoursHolidayName</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>true</isMultiple>
				</AttributeMapping>

				<!-- holiday date -->
				<AttributeMapping>
					<targetAttribute>ptv:date</targetAttribute>
					<sourceExpression>
						<OCQL>HolidayDate</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- opening type -->
				<AttributeMapping>
					<targetAttribute>ptv:openingType</targetAttribute>
					<sourceExpression>
						<OCQL>OpeningType</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

				<!-- opening hours -->
				<AttributeMapping>
					<targetAttribute>ptv:openingHours</targetAttribute>
					<sourceExpression>
						<OCQL>OpeningHours</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>
				
				<!-- feature link -->
				<AttributeMapping>
					<targetAttribute>FEATURE_LINK</targetAttribute>
					<sourceExpression>
						<OCQL>ServiceHoursId</OCQL>
					</sourceExpression>
				</AttributeMapping>
				
			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
