<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess 
	xmlns:as="http://www.geotools.org/app-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace>
			<prefix>ptv</prefix>
			<uri>${ptv.namespace}</uri>
		</Namespace>
	</namespaces>
	<sourceDataStores>
		<DataStore>
			<id>datastore</id>
			<parameters>
				${ptv.datastore.namespace}
				${ptv.datastore.dbtype}
				${ptv.datastore.schema}
				${ptv.datastore.database}
				${ptv.datastore.host}
				${ptv.datastore.port}
				${ptv.datastore.user}
				${ptv.datastore.password}
				${ptv.datastore.exposePrimaryKeys}
				${ptv.datastore.validateConnections}
				${ptv.datastore.supportOnTheFlyGeometrySimplification}
				${ptv.datastore.connectionTimeout}
			</parameters>
		</DataStore>
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
			<schemaUri>${ptv.baseSchemaUri}/serviceLocation.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>datastore</sourceDataStore>
			<sourceType>ChannelIds</sourceType>
			<targetElement>ptv:serviceLocation</targetElement>
			<isDenormalised>false</isDenormalised>
			<attributeMappings>
			
				<!-- id -->
				<AttributeMapping>
					<targetAttribute>ptv:serviceLocation</targetAttribute>
					<idExpression><OCQL>rootId</OCQL></idExpression>
				</AttributeMapping>
				
				<!-- versioned id -->
<!--				<AttributeMapping>-->
<!--					<targetAttribute>ptv:versionedId</targetAttribute>-->
<!--					<sourceExpression>-->
<!--						<OCQL>VersionedId</OCQL>-->
<!--					</sourceExpression>-->
<!--				</AttributeMapping>	-->

				<!-- currently open -->
				<AttributeMapping>
					<targetAttribute>ptv:currentlyOpen</targetAttribute>
					<sourceExpression>
						<OCQL>currentlyOpen</OCQL>
					</sourceExpression>
					<encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>
				
				<!-- channel names -->
				<AttributeMapping>
					<targetAttribute>ptv:channelNames</targetAttribute>
					<sourceExpression>
						<OCQL>versionedId</OCQL>
						<linkElement>ptv:serviceLocationChannelName</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- organization names -->
				<AttributeMapping>
					<targetAttribute>ptv:organizationNames</targetAttribute>
					<sourceExpression>
						<OCQL>organizationId</OCQL>
						<linkElement>ptv:serviceLocationOrganizationName</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- phones -->
				<AttributeMapping>
					<targetAttribute>ptv:phones</targetAttribute>
					<sourceExpression>					  
						<OCQL>rootId</OCQL>						  
						<linkElement>ptv:serviceLocationPhone</linkElement>						  
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- addresses  -->
				<AttributeMapping>
					<targetAttribute>ptv:addresses</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationAddressCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- services  -->
				<AttributeMapping>
					<targetAttribute>ptv:services</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationServiceCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- standard service hours  -->
				<AttributeMapping>
					<targetAttribute>ptv:normalOpeningHours</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationStandardOpeningHoursCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- special service hours  -->
				<AttributeMapping>
					<targetAttribute>ptv:overmidnightOpeningHours</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationOvermidnightOpeningHoursCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- exceptional service hours  -->
				<AttributeMapping>
					<targetAttribute>ptv:exceptionalOpeningHours</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationExceptionalOpeningHoursCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- holiday service hours  -->
				<AttributeMapping>
					<targetAttribute>ptv:holidayOpeningHours</targetAttribute>
					<sourceExpression>
						<OCQL>rootId</OCQL>
						<linkElement>ptv:serviceLocationHolidayOpeningHoursCol</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
				</AttributeMapping>

				<!-- location -->
				<AttributeMapping>
					<targetAttribute>ptv:location3067</targetAttribute>
					<sourceExpression>
						<OCQL>location3067</OCQL>
					</sourceExpression>
					 <encodeIfEmpty>true</encodeIfEmpty>
				</AttributeMapping>

			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
