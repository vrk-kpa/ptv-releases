<?xml version="1.0" encoding="utf-8"?>
<xsd:schema 
	targetNamespace="http://palvelutietovaranto.suomi.fi/ptv"
	xmlns:ptv="http://palvelutietovaranto.suomi.fi/ptv" 
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:gml="http://www.opengis.net/gml"
	attributeFormDefault="unqualified" 
	elementFormDefault="qualified"
	version="1.0">
	
	<xsd:import namespace="http://www.opengis.net/gml" schemaLocation="http://schemas.opengis.net/gml/3.1.1/base/feature.xsd"/>
	<xsd:import namespace="http://www.opengis.net/gml" schemaLocation="http://schemas.opengis.net/gml/3.1.1/base/geometryAggregates.xsd"/>

	<xsd:include schemaLocation="%SCHEMA_LOCATION_URL%/languageTypes.xsd" />
			
	<xsd:element name="serviceLocation" type="ptv:ServiceLocationType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractFeatureType">
				<xsd:sequence>
					<xsd:element name="versionedId" type="xsd:string"/>
					<xsd:element name="rootId" type="xsd:string"/>
					<xsd:element name="organizationId" type="xsd:string"/>
					<xsd:element name="currentlyOpen" type="xsd:string" />
					<xsd:element name="channelNames" type="ptv:LanguageNameType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="organizationNames" type="ptv:LanguageNameType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="phones" type="ptv:LanguagePhoneType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="addresses" type="ptv:ServiceLocationAddressColType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="services" type="ptv:ServiceLocationServiceColType" minOccurs="1" maxOccurs="unbounded" /> 
					<xsd:element name="normalOpeningHours" type="ptv:ServiceLocationStandardOpeningHoursColType" minOccurs="1" maxOccurs="unbounded" /> 
					<xsd:element name="overmidnightOpeningHours" type="ptv:ServiceLocationOvermidnightOpeningHoursColType" minOccurs="1" maxOccurs="unbounded" /> 
					<xsd:element name="exceptionalOpeningHours" type="ptv:ServiceLocationExceptionalOpeningHoursColType" minOccurs="1" maxOccurs="unbounded" /> 
					<xsd:element name="holidayOpeningHours" type="ptv:ServiceLocationHolidayOpeningHoursColType" minOccurs="1" maxOccurs="unbounded" /> 
					<xsd:element name="location3067" type="gml:MultiGeometryPropertyType" minOccurs="1" maxOccurs="1"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:element name="serviceLocationAddressCol" type="ptv:ServiceLocationAddressColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationAddressColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="address" type="ptv:ServiceLocationAddressType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:element name="serviceLocationAddress" type="ptv:ServiceLocationAddressType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationAddressType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="type" type="xsd:string" />
					<xsd:element name="municipalityCode" type="xsd:string" />
					<xsd:element name="municipalityNames" type="ptv:LanguageNameType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="streetAddresses" type="ptv:LanguageAddressType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="additionalInformation" type="ptv:LanguageValueType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:element name="serviceLocationServiceCol" type="ptv:ServiceLocationServiceColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationServiceColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="service" type="ptv:LanguageNameType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
				<xsd:attributeGroup ref="gml:AggregationAttributeGroup"/>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationStandardOpeningHoursCol" type="ptv:ServiceLocationStandardOpeningHoursColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationStandardOpeningHoursColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="openingHours" type="ptv:ServiceLocationStandardOpeningHoursType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationOvermidnightOpeningHoursCol" type="ptv:ServiceLocationOvermidnightOpeningHoursColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationOvermidnightOpeningHoursColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="openingHours" type="ptv:ServiceLocationOvermidnightOpeningHoursType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationExceptionalOpeningHoursCol" type="ptv:ServiceLocationExceptionalOpeningHoursColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationExceptionalOpeningHoursColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="openingHours" type="ptv:ServiceLocationExceptionalOpeningHoursType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationHolidayOpeningHoursCol" type="ptv:ServiceLocationHolidayOpeningHoursColType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationHolidayOpeningHoursColType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="openingHours" type="ptv:ServiceLocationHolidayOpeningHoursType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationStandardOpeningHours" type="ptv:ServiceLocationStandardOpeningHoursType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationStandardOpeningHoursType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="additionalInformation" type="ptv:LanguageValueType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="openingType" type="xsd:string" />
					<xsd:element name="validFrom" type="xsd:string" />
					<xsd:element name="validTo" type="xsd:string" />
					<xsd:element name="openingHours" type="ptv:OpeningHourDayType" minOccurs="1" maxOccurs="unbounded" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationOvermidnightOpeningHours" type="ptv:ServiceLocationOvermidnightOpeningHoursType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationOvermidnightOpeningHoursType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="additionalInformation" type="ptv:LanguageValueType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="validFrom" type="xsd:string" />
					<xsd:element name="validTo" type="xsd:string" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:element name="serviceLocationExceptionalOpeningHours" type="ptv:ServiceLocationExceptionalOpeningHoursType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationExceptionalOpeningHoursType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="additionalInformation" type="ptv:LanguageValueType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="openingType" type="xsd:string" />
					<xsd:element name="validFrom" type="xsd:string" />
					<xsd:element name="validTo" type="xsd:string" />
					<xsd:element name="openingHours" type="xsd:string" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:element name="serviceLocationHolidayOpeningHours" type="ptv:ServiceLocationHolidayOpeningHoursType" substitutionGroup="gml:AbstractFeature" />
	<xsd:complexType name="ServiceLocationHolidayOpeningHoursType">
		<xsd:complexContent>
			<xsd:extension base="gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="holidayNames" type="ptv:LanguageNameType" minOccurs="1" maxOccurs="unbounded" />
					<xsd:element name="date" type="xsd:string" />
					<xsd:element name="openingType" type="xsd:string" />
					<xsd:element name="openingHours" type="xsd:string" />
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="OpeningHourDayType">
		<xsd:complexContent>
			<xsd:extension base = "gml:AbstractGMLType">
				<xsd:sequence>
					<xsd:element name="openingHours" type="ptv:OpeningHourDayPropertyType" minOccurs="1" maxOccurs="unbounded"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="OpeningHourDayPropertyType">
		<xsd:simpleContent>
			<xsd:extension base="xsd:string">
				<xsd:attribute type="xsd:string" name="day"/>
			</xsd:extension>
		</xsd:simpleContent>
	</xsd:complexType>
	
	<xsd:element name="serviceLocationChannelName" type="ptv:LanguageNameType" />
	<xsd:element name="serviceLocationOrganizationName" type="ptv:LanguageNameType"  />
	<xsd:element name="serviceLocationPhone" type="ptv:LanguagePhoneType" />
	<xsd:element name="serviceLocationServiceName" type="ptv:LanguageNameType" />
	<xsd:element name="serviceLocationAddressMunicipalityName" type="ptv:LanguageNameType" />
	<xsd:element name="serviceLocationAddressStreetAddress" type="ptv:LanguageAddressType" />
	<xsd:element name="serviceLocationAddressAdditionalInformation" type="ptv:LanguageValueType" />
	<xsd:element name="serviceLocationServiceHoursAdditionalInformation" type="ptv:LanguageValueType" />
	<xsd:element name="serviceLocationServiceHoursHolidayName" type="ptv:LanguageNameType" />
	<xsd:element name="serviceLocationServiceHoursOpeningHours" type="ptv:OpeningHourDayType" />
	
</xsd:schema>