@using PTV.IdentityUserManager.Models
@model PTV.IdentityUserManager.Models.LogoutViewModel

<div class="logout-page">
    <div class="page-header">
        <h1>Logout</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Would you like to logout of PTV IdentityServer?</p>
            <form asp-action="LogOff">
                <input type="hidden" asp-for="SignOutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">Yes</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>