    "LocalizationJob": {
        "JobInfo": {
            "Description": "Task for downloading localization messages from transifex service"
        },
        "Scheduling": {
            "Scheduler": "0 0 5 ? * MON *",
            "RetriesOnFail": 1,
            "SchedulerOnFail": "0 0 0/1 * * ?"
        },
        "JobData": {
            "url": "https://www.transifex.com/api/2/",
            "params": {
                "translation": [
                    "project",
                    "{project}",
                    "resource",
                    "{resource}",
                    "translation",
                    "{localization}",
                    "?mode=onlytranslated"
                ],
                "content": ["project",
                    "{project}",
                    "resource",
                    "{resource}",
                    "content"
                ]
            },
            "projects": {
                "dev": {
                    "name": "fsc-dev",
                    "resource": "fijson"
                },
                "prod": {
                    "name": "fsc-prod",
                    "resource": "notranslationjson"
                },
                "sandbox": {
                    "name": "fsc-sandbox",
                    "resource": "fi_downloadedjson"
                }
            }
        },
        "AllowForDisplaying": true
    }
