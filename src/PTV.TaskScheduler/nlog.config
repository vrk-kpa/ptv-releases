<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="d:\logsPTV\PTV_NLog_quartz.txt">

    <variable name="logDirectory" value="c:\logs\PTV\TaskScheduler"/>
    <variable name="archiveDirectory" value="c:\logs\PTV\TaskScheduler-Archive"/>

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>
        
   <!-- define various log targets -->
    <targets>
        <!-- write logs to file -->
        <!-- use this to write also other logs -->
        <!--<target xsi:type="File" name="allfile" fileName="c:\logs\PTV-nlog-all-${shortdate}.log"
                     layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception}" />-->

        <!-- Following file is for internal use. It is containing all the log entries in plain text format.-->
        <!-- SFIPTV-1134 -->
        <!--<target xsi:type="File" 
                name="ptvTaskSchedulerAllFile"
                fileName="${logDirectory}\PTV-quartz-nlog-${shortdate}.log"
                layout="operationid=${event-properties:item=OperationId}|logger=${logger}|time=${longdate}|level=${uppercase:${level}}|executiontype=${event-properties:item=ExecutionType}|message=${message}|exception=${exception:format=toString:innerFormat=toString:maxInnerExceptionLevel=3}|operation=${event-context:item=Operation}|table=${event-context:item=Table}|rowid=${event-context:item=RowId}|user=${event-context:item=User}" />-->
        <target xsi:type="File"
                name="jsonJobLogger"
                fileName="${logDirectory}\PTV-quartz-nlog.json"
                archiveFileName="${archiveDirectory}\PTV-quartz-nlog-{##}.json"
                archiveDateFormat="yyyy-MM-dd"
                archiveNumbering="DateAndSequence"
                archiveEvery="Day"
                archiveOldFileOnStartup="true">
                 <layout xsi:type="JsonLayout">
                     <attribute name="logger" layout="${logger}" />
                     <attribute name="operationId" layout="${operation-id}"/>
                     <attribute name="time" layout="${longdate}"/>
                     <attribute name="level" layout="${level:upperCase=true}"/>
                     <attribute name="executionType" layout="${execution-type}"/>
                     <attribute name="jobType" layout="${job-type}"/>
                     <attribute name="jobStatus" layout="${job-status}"/>
                     <attribute name="isForced" layout="${event-properties:item=IsForced}"/>
                     <attribute name="message" layout="${message}" />
                     <attribute name="exception" layout="${exception:format=toString,Data}"/>
                     <attribute name="operation" layout="${event-context:item=Operation}"/>
                     <attribute name="table" layout="${event-context:item=Table}"/>
                     <attribute name="rowid" layout="${event-context:item=RowId}"/>
                     <attribute name="user" layout="${event-context:item=User}"/>
                 </layout>
        </target>
        <target xsi:type="Null" name="blackhole" />
    </targets>

    <rules>
        <!--All logs, including from Microsoft-->
        <!--<logger name="*" minlevel="Trace" writeTo="allfile" />-->

        <!--Skip Microsoft logs and so log only own logs-->
        <logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
        <!--Skip Npgsql logs -->
        <logger name="Npgsql.*" minlevel="Trace" writeTo="blackhole" final="true" />
        <!--Skip Webpack logs-->
        <logger name="webpack*" minlevel="Trace" writeTo="blackhole" final="true" />
        <logger name="Webpack*" minlevel="Trace" writeTo="blackhole" final="true" />
        <!--Skip Quartz logs-->
        <logger name="Quartz.SQL" levels="Debug,Info" writeTo="blackhole" final="true" />
        <logger name="Quartz.Util*" levels="Debug,Info" writeTo="blackhole" final="true" />
        <logger name="Quartz.Simpl*" levels="Debug,Info" writeTo="blackhole" final="true" />
        <logger name="Quartz.Impl*" levels="Debug,Info" writeTo="blackhole" final="true" />
        <logger name="Quartz.Core*" levels="Debug,Info" writeTo="blackhole" final="true" />
        
        <logger name="IJob" writeTo="jsonJobLogger" final="true"/>
        <logger name="SoteService" writeTo="jsonJobLogger" final="true"/>
        <logger name="AccessibilityRegisterService" writeTo="jsonJobLogger" final="true"/>
        <logger name="PTV.TaskScheduler.QuartzScheduler" minlevel="Trace" writeTo="jsonJobLogger" final="true"/>
        <logger name="*" levels="Warn,Error" writeTo="jsonJobLogger" />
        
        <!-- SFIPTV-1134 -->
        <!-- <logger name="*" minlevel="Trace" writeTo="ptvTaskSchedulerAllFile" /> --> 
        <!-- <logger name="IJob" minlevel="Trace" writeTo="ptvTaskSchedulerAllFile" /> -->
        <!-- <logger name="SoteService" minlevel="Trace" writeTo="ptvTaskSchedulerAllFile" /> -->
        <!-- <logger name="PTV.TaskScheduler.QuartzScheduler" minlevel="Trace" writeTo="ptvTaskSchedulerAllFile" /> -->
    </rules>
</nlog>